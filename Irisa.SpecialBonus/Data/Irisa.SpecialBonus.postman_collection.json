    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (get JWT)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"admin\",\n  \"password\": \"Test@12345\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// فرض می‌کنیم پاسخ شبیه { token: \"...\" } باشد",
                  "if (pm.response.code === 200) {",
                  "  var json = pm.response.json();",
                  "  if (json && json.token) {",
                  "    pm.environment.set(\"token\", json.token);",
                  "  }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
